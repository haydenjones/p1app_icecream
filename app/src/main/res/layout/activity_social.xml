<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.priorityonepodcast.p1app.activities.SocialActivity">

    <ImageView
        android:id="@+id/banner_news"
        android:src="@drawable/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/banner_news"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/link_facebook" android:onClick="onClick" android:clickable="true" android:paddingBottom="24dp" android:text="Facebook" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/link_twitter" android:onClick="onClick" android:clickable="true" android:paddingBottom="24dp" android:text="Twitter" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/link_facebook" />
        <TextView android:id="@+id/link_youtube" android:onClick="onClick" android:clickable="true" android:paddingBottom="24dp" android:text="YouTube" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/link_twitter" />
    </RelativeLayout>
</RelativeLayout>
